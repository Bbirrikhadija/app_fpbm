<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5E5E5"
    tools:context=".demandePiece"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_1"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_horizontal|top"
            android:text="Pour réaliser la demande commencer par choisir la pièce que vous désirez récupérer auprès du service de la scolarité est valider "
            android:textAlignment="center"
            android:textAppearance="@style/bienvenu_vo"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.120000005" />

        <Button
            android:id="@+id/button3"
            android:layout_width="323dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="47dp"
            android:layout_marginTop="93dp"
            android:layout_marginEnd="41dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/poppins_semibold"
            android:text="Demander une  pièce "
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp"

            />

        <Button
            android:id="@+id/button4"
            android:layout_width="323dp"
            android:layout_height="50dp"
            android:layout_below="@+id/button3"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="46dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="42dp"
            android:background="@drawable/rectangle_2"
            android:fontFamily="@font/poppins_semibold"
            android:shadowColor="@color/black"

            android:text="Retrait définitif"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="20dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>